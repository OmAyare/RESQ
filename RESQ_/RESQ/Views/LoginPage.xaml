<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RESQ.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:RESQ.ViewModels"
    Title="LoginPage"
    x:DataType="vm:LoginViewModel"
    BackgroundColor="#1c1c1c"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False">
    <Grid Padding="20" RowDefinitions="2*,3*,Auto,Auto,Auto,Auto,Auto,*">

        <!--  Header / Logo area  -->
        <Grid
            Grid.Row="0"
            BackgroundColor="#FF4500"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">
            <Label
                FontAttributes="Bold"
                FontSize="36"
                HorizontalOptions="Center"
                Text="RESQ"
                TextColor="White"
                VerticalOptions="End" />
            <!-- Later replace with Image: <Image Source="resq_logo.png" /> -->
        </Grid>

        <!--  Tagline  -->
        <Label
            Grid.Row="1"
            FontSize="16"
            HorizontalOptions="Center"
            Text="Stay Safe. Stay Connected."
            TextColor="Gray"
            VerticalOptions="Center" />

        <!--  Username field  -->
        <Frame
            Grid.Row="2"
            Padding="10"
            BackgroundColor="#2E2E2E"
            CornerRadius="12"
            HasShadow="False">
            <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
                <Label
                    FontFamily="FASolid"
                    FontSize="18"
                    Text="&#xf007;"
                    TextColor="White"
                    VerticalOptions="Center" />
                <Entry
                    Grid.Column="1"
                    BackgroundColor="Transparent"
                    Placeholder="Username"
                    PlaceholderColor="LightGray"
                    Text="{Binding Username}"
                    TextColor="White" />
            </Grid>
        </Frame>

        <!--  Password field  -->
        <Frame
            Grid.Row="3"
            Padding="10"
            BackgroundColor="#2E2E2E"
            CornerRadius="12"
            HasShadow="False">
            <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
                <Label
                    FontFamily="FASolid"
                    FontSize="18"
                    Text="&#xf023;"
                    TextColor="White"
                    VerticalOptions="Center" />
                <Entry
                    Grid.Column="1"
                    BackgroundColor="Transparent"
                    IsPassword="True"
                    Placeholder="Password"
                    PlaceholderColor="LightGray"
                    Text="{Binding Password}"
                    TextColor="White" />
            </Grid>
        </Frame>

        <!--  Login button  -->
        <Button
            Grid.Row="4"
            Margin="0,10,0,0"
            BackgroundColor="#FF3B30"
            Command="{Binding LoginCommand}"
            CornerRadius="12"
            FontAttributes="Bold"
            HeightRequest="50"
            Text="LOGIN"
            TextColor="White" />

        <!--  Create Account button  -->
        <Button
            Grid.Row="5"
            Margin="0,10,0,0"
            BackgroundColor="#2E2E2E"
            Command="{Binding GoToRegisterCommand}"
            CornerRadius="12"
            HeightRequest="50"
            Text="Create New Account"
            TextColor="White" />

        <Label
            Grid.Row="6"
            HorizontalOptions="Center"
            IsVisible="{Binding IsErrorVisible}"
            Text="{Binding ErrorMessage}"
            TextColor="Red"
            VerticalOptions="Center" />

    </Grid>
</ContentPage>