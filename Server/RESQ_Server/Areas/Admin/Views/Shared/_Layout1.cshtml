<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Job Tracks</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f6f9;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .main-header {
            background: linear-gradient(to right, #007fff, #00e5ff);
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 60px;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

            .main-header h2 {
                margin: 0;
                font-weight: 600;
                font-size: 22px;
                cursor: pointer;
            }

        .logo-name {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .logo-name img {
                width: 80px;
                height: 36px;
                border-radius: 6px;
                cursor: pointer;
            }

        .layout-container {
            display: flex;
            flex: 1;
            overflow: hidden;
        }

        .sidebar {
            width: 220px;
            background: #f8f9fa;
            height: calc(100vh - 60px);
            position: sticky;
            top: 60px;
            left: 0;
            border-right: 1px solid #dee2e6;
            overflow-y: auto;
            flex-shrink: 0;
        }

            .sidebar a {
                display: flex;
                align-items: center;
                padding: 12px 20px;
                color: #333;
                text-decoration: none;
                transition: background 0.2s;
                font-size: 15px;
            }

                .sidebar a.active, .sidebar a:hover {
                    background: linear-gradient(to right, #74ebd5, #9face6);
                    color: #000;
                    font-weight: 600;
                    border-left: 4px solid #007fff;
                    padding-left: 16px;
                }

                .sidebar a i {
                    margin-right: 10px;
                }

        .main-body {
            flex: 1;
            display: flex;
            flex-direction: column;
            overflow-y: auto;
            padding: 30px 40px 60px 40px;
        }

        .main-footer {
            background: #d0dfe7;
            color: #333;
            padding: 10px 20px;
            text-align: center;
            font-size: 14px;
            flex-shrink: 0;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .user-info img {
                width: 32px;
                height: 32px;
                border-radius: 50%;
            }

        .menu-toggle {
            display: none;
            background: none;
            border: none;
            color: white;
            font-size: 24px;
        }

        .dropdown-menu {
            z-index: 9999 !important;
        }

        @@media (max-width: 768px) {
            .sidebar {
                display: none;
                position: fixed;
                width: 220px;
                z-index: 1001;
                height: 100vh;
                top: 60px;
                left: 0;
                background: #f8f9fa;
                overflow-y: auto;
            }

            .menu-toggle {
                display: block;
            }

            .main-body {
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="main-header">
        <div class="logo-name">
            <button class="menu-toggle" onclick="toggleSidebar()">
                <i class="bi bi-list"></i>
            </button>
            <img src="@Url.Content("~/image/logo1.png")" alt="Logo" onclick="location.href='@Url.Action("Dashboard", "Admin")'" />
            <h2 onclick="location.href='@Url.Action("Dashboard", "Admin")'">Job Tracks</h2>
        </div>
        <div class="user-info">
            <div class="dropdown" style="position: relative;">
                <span class="bi bi-clock"></span>
                <span>@DateTime.Now.ToString("HH:mm")</span>
                <img src="@(Session["PhotoBase64"] != null ? "data:image/png;base64," + Session["PhotoBase64"].ToString() : Url.Content("~/image/employeelogo.jpg"))"
                     class="dropdown-toggle"
                     data-bs-toggle="dropdown"
                     aria-expanded="false"
                     style="cursor:pointer; width:36px; height:36px; border-radius:50%;" />

                <ul class="dropdown-menu dropdown-menu-end p-3 shadow">
                    <li class="text-center">
                        <img src="@(Session["PhotoBase64"] != null ? "data:image/png;base64," + Session["PhotoBase64"].ToString() : Url.Content("~/image/employeelogo.jpg"))"
                             style="width:60px; height:60px; border-radius:50%;" />
                        <p class="mt-2 mb-0">Welcome</p>
                        <strong>@Session["FullName"]</strong><br />
                        <small class="text-muted">@Session["UserCode"]</small><br />
                        <small>@Session["Email"]</small>
                    </li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="@Url.Action("ViewProfile", "Admin")"><i class="bi bi-person-vcard"></i> View Details</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("ChangePassword", "Admin")"><i class="bi bi-lock"></i> Change Password</a></li>
                    <a class="dropdown-item" href="#" onclick="confirmLogout()"><i class="bi bi-box-arrow-right"></i> Sign Out</a>
                </ul>
            </div>
        </div>
    </div>

    <div class="layout-container">
        <div class="sidebar" id="sidebarMenu">
            <a href="@Url.Action("Dashboard", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Dashboard" ? "active" : "")">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
            <a href="@Url.Action("User", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "User" ? "active" : "")">
                <i class="bi bi-person-circle"></i> User
            </a>
            <a href="@Url.Action("Company", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Company" ? "active" : "")">
                <i class="bi bi-building"></i> Company
            </a>
            <a href="@Url.Action("AssignWork", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "AssignWork" ? "active" : "")">
                <i class="bi bi-list-task"></i> Assign Work
            </a>
        </div>

        <div class="main-body">
            @RenderBody()
        </div>
    </div>

    <div class="main-footer">
        &copy; @DateTime.Now.Year - Job Tracks by Omi
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebarMenu');
            sidebar.style.display = sidebar.style.display === 'block' ? 'none' : 'block';
        }

        document.addEventListener('DOMContentLoaded', function () {
            var dropdownElementList = [].slice.call(document.querySelectorAll('.dropdown-toggle'))
            dropdownElementList.map(function (dropdownToggleEl) {
                new bootstrap.Dropdown(dropdownToggleEl);
            });
        });

       function confirmLogout() {
        if (confirm("Are you sure you want to sign out?")) {
            window.location.href = '@Url.Action("Index", "Home", new { area = "" })';
        }
    }
    </script>
</body>
</html>
